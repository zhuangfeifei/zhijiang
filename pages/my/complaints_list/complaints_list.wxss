/* pages/my/complaints_list/complaints_list.wxss */
#complaints_list{
  width: 100%; min-height: 100%; background-color: #F6F6F6; box-sizing: border-box; padding-bottom: 98rpx;
}

.complaints_list{
  width: 100%; display: flex; justify-content: space-between; padding: 48rpx 40rpx; box-sizing: border-box;
  font-size: 28rpx; color: #4B4B4B; background-color: #FFFFFF; margin-bottom: 20rpx;
}
.complaints_list image{ width: 30rpx; height: 30rpx; }
.complaints_list_describe{
  width: 620rpx;
}
.complaints_list_describe view:nth-child(1){
  width: 100%; height: 30rpx; display: flex; justify-content: space-between; align-items: center;
  font-size: 24rpx; color: #2B2B2B; font-family:PingFang-SC-Medium; font-weight:500; margin-bottom: 20rpx;
}
.complaints_list_describe view:nth-child(1) text:nth-child(2){
  color: #808080; font-family:PingFang-SC-Regular; font-weight:400;
}
.complaints_list_describe view:nth-child(2){
  width: 100%;
}
.replay_status{ margin-bottom: 0; }
.cancel{
  width: 100%; height: 83rpx; text-align: center; line-height: 83rpx; font-size: 24rpx; color: #647097; margin-bottom: 20rpx;
  font-family:PingFang-SC-Medium; font-weight:500; border-top: 2rpx solid #E8E8E8; background-color: #FFFFFF;
}
.complaints_list_reply{
  width: 100%; background-color: #EAECF0; border-radius: 10rpx; display: flex; justify-content: space-between; 
  box-sizing: border-box; padding: 20rpx; margin-top: 20rpx;
}
.complaints_list_reply view{
  width: 535rpx!important; background-color: #EAECF0; border-radius: 10rpx;
}
.complaints_list_reply image{
  position: relative; top: 5rpx;
}
.complaints_list_reply_content{ margin-top: 20rpx; }




.noComplaints{
  width: 100%; background-color: #FFFFFF; text-align: center; box-sizing: border-box;
  padding-top: 200rpx; color: #2A2A2A; font-size: 24rpx; font-family:PingFang-SC-Medium; font-weight:500;
}
.noComplaints image{ width: 159rpx; height: 159rpx; margin-bottom: 30rpx; }


.complaints{
  width: 100%; height: 98rpx; position: fixed; bottom: 0; left: 0; text-align: center; line-height: 98rpx;
  color: #C15356; font-size: 30rpx; border-top: 1rpx solid #C15356; background-color: #FFFFFF;
}