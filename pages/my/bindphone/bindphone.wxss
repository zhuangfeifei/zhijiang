/* pages/my/bindphone/bindphone.wxss */
#bindphone{
  width: 100%; height: 100%; background-color: #F6F6F6; box-sizing: border-box;
}

.label{
  font-size: 24rpx; font-family:PingFang-SC-Medium; font-weight:500; color: #2B2B2B; line-height: 58rpx; 
  margin-left: 40rpx; padding-top: 30rpx;
}
.section{
  width: 100%; height: 88rpx; background-color: #FFFFFF; display: flex; justify-content: space-between; align-items: center; 
  box-sizing: border-box; padding-right: 40rpx;
}
input{
  width: 50%; padding-left: 40rpx; font-size: 28rpx; color: #4B4B4B; 
}
text{ font-size: 28rpx; color: #C15356; }

button{
  width: 300rpx; height: 72rpx; background-color: #CECECE; line-height: 72rpx; color: #FFFFFF;
  font-size: 36rpx; font-family:PingFang-SC-Medium; font-weight:500; margin-top: 100rpx; border-radius: 36rpx;
}
button::after{
  border: 0;
}
.active_btn{ background-color: #C15356!important; }