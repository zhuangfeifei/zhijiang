/* pages/my/details/details.wxss */

#details {
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
    background-color: #F6F6F6;
    padding-bottom: 98rpx;
}

.swiper_list {
    width: 100%;
    height: 670rpx;
    background-color: #FFFFFF;
    padding-top: 40rpx;
}

.swiper, .swiper-item {
    width: 670rpx;
    height: 670rpx;
    margin: 0 auto;
    border-radius: 10rpx!important;
}

.swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
    /* position: relative; left: 372rpx; */
}

.swiper-item view {
    width: 670rpx;
    height: 511rpx;
    border-radius: 10rpx!important;
}

.slide-image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx!important;
}

.img_active {
    position: relative;
    left: 0rpx;
    z-index: 10;
}

/* .img_actives{
    position: relative; left: -372rpx;
} */

.details_nav {
    width: 100%;
    padding: 48rpx 40rpx;
    box-sizing: border-box;
    background-color: #FFFFFF;
}

.details_nav view:nth-child(1) {
    width: 100%;
    max-height: 96rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.details_nav view:nth-child(2) {
    width: 100%;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #C15356;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    margin-top: 10rpx;
}

.details_nav view:nth-child(2) text:nth-child(2) {
    font-size: 24rpx;
    color: #808080;
    text-decoration: line-through;
    margin-left: 30rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
}

.details_nav view:nth-child(3) {
    width: 100%;
    font-size: 24rpx;
    color: #4B4B4B;
    margin-top: 30rpx;
    line-height: 48rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.details_nav_description {
    width: 100%!important;
    color: #4B4B4B;
    font-size: 24rpx!important;
    font-family: PingFang-SC-Regular!important;
    font-weight: 400!important;
}

.details_nav_descriptions {
    width: 15%!important;
    display: flex;
}

.details_nav view:nth-child(3) .div {
    width: 3rpx;
    height: 48rpx;
    background-color: #E8E8E8;
    margin: 0;
    padding: 0;
    margin-right: 40rpx;
}

.details_nav view:nth-child(3) image {
    width: 30rpx;
    height: 28rpx;
    position: relative;
    top: 10rpx;
}

.shop {
    width: 100%;
    height: 194rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 40rpx;
    margin-top: 20rpx;
    background-color: #FFFFFF;
}

.shop>image {
    width: 98rpx;
    height: 98rpx;
}

.shop>view:nth-child(2) {
    width: 280rpx;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
}

.shop>view>view>text {
    font-size: 24rpx;
    color: #27AF1E;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
}

.shop>view>view {
    display: flex;
    align-items: center;
}

.shop>view>view>image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 11rpx;
}

.shop>view:nth-child(3) {
    width: 160rpx;
    height: 56;
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: #C15356;
    border: 2rpx solid #C15356;
    text-align: center;
    line-height: 56rpx;
    border-radius: 28rpx;
}

.WeddingPackages {
    width: 100%;
    background-color: #FFFFFF;
    margin-top: 20rpx;
    padding-bottom: 30rpx;
}

.WeddingPackages_title {
    width: 100%;
    height: 88rpx;
    border-bottom: 2rpx solid #E8E8E8;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
}

.WeddingPackages_title>text {
    border-left: 6rpx solid #F6998C;
    padding-left: 24rpx;
    margin-left: 40rpx;
    line-height: 88rpx;
}

.WeddingPackages_content {
    width: calc(100% - 69rpx - 69rpx);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: #2B2B2B;
    margin-top: 33rpx;
}

.WeddingPackages_content text {
    font-size: 24rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: #808080;
}

.WeddingPackages_content view {
    width: 75%;
    line-height: 36rpx;
}

.other {
    margin-top: 40rpx;
}

.WeddingPackages_tab {
    width: 100%;
    background-color: #FFFFFF;
    margin-top: 20rpx;
}

.WeddingPackages_tab_title {
    width: 100%;
    height: 101rpx;
    border-bottom: 2rpx solid #E8E8E8;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 30rpx;
    color: #1A213C;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    text-align: center;
}

.WeddingPackages_tab_title view {
    width: 168rpx;
    height: 100%;
    padding-top: 30rpx;
    box-sizing: border-box;
    line-height: 30rpx;
}

.tab_active {
    border-bottom: 4rpx solid #F6998C;
}

.WeddingPackages_tab_title view text:nth-child(2) {
    font-size: 22rpx;
    color: #808080;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
}

.tabItem_active {
    color: #C15356!important;
}

.WeddingPackages_tab_list {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 30rpx 40rpx;
    position: relative;
}

.WeddingPackages_tab_list image {
    width: 315rpx;
    height: 315rpx;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.isImg {
    width: 40rpx!important;
    height: 40rpx!important;
    position: absolute;
    top: 20rpx;
    left: calc((100% - 40rpx) / 2);
}

.details_bottom {
    width: 100%;
    height: 98rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #C15356;
    background-color: #FFFFFF;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding-left: 45rpx;
}

.details_bottom button image {
    width: 38rpx;
    height: 68rpx;
}

.details_bottom image:nth-child(2) {
    width: 40rpx;
    height: 68rpx;
}

.details_bottom view {
    width: 494rpx;
    height: 100%;
    background-color: #C15356;
    text-align: center;
    line-height: 98rpx;
    color: #FFFFFF;
}

.details_bottom button {
    width: 38rpx;
    height: 68rpx;
    padding: 0;
    background: none;
    border-radius: 0;
    line-height: 0;
    margin: 0;
}

.details_bottom button::after {
    border: none;
}