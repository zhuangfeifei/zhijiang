/* pages/my/certification/certification.wxss */
@import './template-certification/template-certification.wxss';

#certification{
  width: 100%; height: 100%; background-color: #F6F6F6;
}

.certification_nav{
  width: 100%; height: 144rpx; background-color: #EAECF0; display: flex; justify-content: space-between;
  box-sizing: border-box; padding: 0 183rpx; align-items: center;
}
.certification_nav view:nth-child(2n-1){
  width: 48rpx; height: 48rpx; border-radius: 50%; background-color: #FFFFFF; text-align: center; line-height: 48rpx;
  color: #808080; font-size: 28rpx;
}
.certification_nav view:nth-child(2n){
  width: 108rpx; height: 2rpx; background-color: #FFFFFF;
}
.status{ background-color: #F6998C!important; color: #FFFFFF!important; }



/* 弹出层 */
.certification_modal{
  width: 100%; height: 100%; position: fixed; top: 0; left: 0; z-index: 5; background: rgba(0, 0, 0, 0.4); padding-top: 223rpx;
}
.certification_modal_{
  width: 550rpx; height: 632rpx; background-color: #FFFFFF; margin: 0 auto; border-radius: 10rpx; position: relative;
  color: #000000; font-size: 36rpx; font-family:PingFang-SC-Bold; font-weight:bold; text-align: center; padding-top: 48rpx;
}
.certification_modal_ image{
  width: 490rpx; height: 330rpx; margin-top: 48rpx;
}
.certification_modal_ text{
  font-size: 24rpx; color: #4B4B4B; line-height: 50rpx;
}
.certification_modal_ .certification_modal_bottom{
  width: 100%; height: 88rpx; font-size: 30rpx; color: #C15356; line-height: 88rpx; border-top: 1rpx solid #C15356;
  font-family:PingFang-SC-Medium; font-weight:500; position: absolute; bottom: 0; left: 0;
}