/* pages/my/certification/template-certification/template-certification.wxss */
.certification_template_nav{
  width: 100%; text-align: center; padding-top: 64rpx;
}
.certification_template_nav_img{
  width: 148rpx; height: 36rpx;
}
.certification_template_file{
  width: 550rpx; height: 413rpx; background-color: #E8E8E8; margin: 64rpx auto; 
  display: flex; justify-content: center; align-items: center; position: relative;
}
.certification_template_file image{
  width: 120rpx; height: 120rpx;
}
.fileImg{ width: 100%!important; height: 100%!important; }
.imgDelete{
  width: 48rpx!important; height: 48rpx!important; position: absolute; top: 0; right: 0;
}


.certification_template_input{
  width: 550rpx; height: 88rpx; background-color: #E8E8E8; margin: 0 auto; margin-top: 64rpx; margin-bottom: 389rpx;
  display: flex; align-items: center;
}
input{
  width: 100%; font-size: 28rpx; text-align: center; color: #4B4B4B;
}


button{
  width: 300rpx; height: 72rpx; background-color: #CECECE!important; line-height: 72rpx; color: #FFFFFF!important; font-size: 36rpx;
  font-family:PingFang-SC-Medium; font-weight:500; border-radius: 36rpx; 
}
button::after {
  border: 0;
} 
.upImg_btn{ background-color: #C15356!important; }





.certification_end{
  width: 100%; box-sizing: border-box; position: relative;
}
.certification_end .back{
  width: 100%; height: 100%; position: absolute; top: 0; left: 0; z-index: 0;
}
.success{ 
  width: 100%; height: 100%; text-align: center; padding-top: 120rpx; font-size: 36rpx; color: #2A2A2A; 
  font-family:PingFang-SC-Bold; font-weight:bold; position: absolute; box-sizing: border-box;
}
.success image{
  width: 160rpx!important; height: 160rpx!important; margin-bottom: 48rpx;
}
.success text{
  font-size: 24rpx; color: #808080; line-height: 36rpx; 
}
.certification_success{
  width: 300rpx; height: 72rpx; border: 1rpx solid #C15356; background: none; color: #C15356; font-size: 36rpx;
  line-height: 72rpx; margin: 0 auto; border-radius: 36rpx; margin-top: 236rpx;
}