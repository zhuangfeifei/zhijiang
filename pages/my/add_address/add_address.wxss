/* pages/my/add_address/add_address.wxss */
#add_address{
  width: 100%; height: 100%; background-color: #F6F6F6;
}


.add_list{
  width: 100%; height: 88rpx; display: flex; justify-content: space-between; font-weight:500; background-color: #FFFFFF;
  box-sizing: border-box; padding: 0 40rpx; align-items: center; font-size: 28rpx; color: #2B2B2B; font-family:PingFang-SC-Medium;
  border-bottom: 1rpx solid #E8E8E8;
}
.section{
  width: 80%; height: 88rpx; display: flex; align-items: center; box-sizing: border-box; color: #4B4B4B;
}
input, .picker{
  width: 100%; padding-left: 40rpx; font-size: 28rpx; 
}
.picker{ width: 500rpx; }
.picker text{ color: #CECECE; }
.add_list:nth-child(2), .add_list:last-child{ margin-bottom: 20rpx; border: 0; }


button{
  width: 300rpx; height: 72rpx; background-color: #CECECE!important; line-height: 72rpx; color: #FFFFFF!important;
  font-size: 36rpx; font-family:PingFang-SC-Medium; font-weight:500; margin-top: 100rpx; border-radius: 36rpx;
}
button::after{
  border: 0;
}
.avtive_btn{ background-color: #C15356!important; }