/* pages/my/address/address.wxss */
#address{
  width: 100%; min-height: 100%; background-color: #F6F6F6; box-sizing: border-box; padding-bottom: 98rpx;
}

.address_list{
  width: 100%; max-height: 277rpx; background-color: #FFFFFF; box-sizing: border-box; padding: 0 40rpx; margin-bottom: 20rpx;
  font-size: 30rpx; color: #2B2B2B;
}
.address_list_detail{
  width: 100%; min-height: 144rpx; display: flex; justify-content: space-between; padding-top: 30rpx; box-sizing: border-box;
}
.address_list_content{
  width: 505rpx; 
}
.address_list_editor{
  width: 100%; height: 100rpx; border-top: 1rpx solid #E8E8E8; display: flex; justify-content: space-between; align-items: center;
}
h3{ font-family:PingFang-SC-Bold; font-weight:bold; }
text{ font-family:PingFang-SC-Medium; font-weight:500; }
.address_list_content view{
  width: 100%; max-height: 60rpx; color: #4B4B4B; font-size: 28rpx; line-height: 30rpx;
  display: -webkit-box; word-break: break-all; -webkit-box-orient: vertical; -webkit-line-clamp:2;
  overflow: hidden; text-overflow:ellipsis; margin: 25rpx 0 30rpx 0;
}
.address_list_editor view:nth-child(1){ display: flex; }
.address_list_editor view:nth-child(1) view{
  width: 40rpx; height: 40rpx; border-radius: 50%; border: 1rpx solid #E8E8E8; margin-right: 20rpx;
}
.address_list_editor view:nth-child(1) view image{
  width: 100%; height: 100%;
}
.address_list_editor view:nth-child(2) image{
  width: 30rpx; height: 30rpx; margin-left: 64rpx;
}



.noAddress{
  width: 100%; background-color: #FFFFFF; text-align: center; box-sizing: border-box;
  padding-top: 200rpx; color: #2A2A2A; font-size: 24rpx; font-family:PingFang-SC-Medium; font-weight:500;
}
.noAddress image{ width: 159rpx; height: 159rpx; margin-bottom: 30rpx; }


.add_address{
  width: 100%; height: 98rpx; position: fixed; bottom: 0; left: 0; text-align: center; line-height: 98rpx;
  color: #C15356; font-size: 30rpx; border-top: 1rpx solid #C15356; background-color: #FFFFFF;
}