/* pages/my/appointment/appointment.wxss */

#appointment {
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

.label {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #2b2b2b;
  line-height: 58rpx;
  margin-left: 40rpx;
  padding-top: 30rpx;
}

.section {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

input {
  width: 100%;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #4b4b4b;
}

.appointment_time {
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #cecece;
}

.appointment_times {
  color: #4b4b4b;
}

button {
  width: 300rpx;
  height: 70rpx;
  background-color: #c15356;
  line-height: 70rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  border-radius: 36rpx;
  color: #fff;
  margin-top: 100rpx;
}

#picker_ {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 50%;
  background-color: #fff;
  position: absolute;
  bottom: -50%;
  left: 0;
  box-sizing: border-box;
}

.picker_list {
  width: 100%;
  height: 78rpx;
  background-color: #fff;
  line-height: 78rpx;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  border-bottom: 1rpx solid #e8e8e8;
}

.picker_determine {
  width: 100%;
  height: 98rpx;
  border-top: 1rpx solid #c15356;
  text-align: center;
  line-height: 98rpx;
  color: #c15356;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
